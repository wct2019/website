{
  "name": "wct2019-website",
  "version": "1.0.0",
  "description": "css file for wct2019",
  "bugs": {
    "url": "https://github.com/wct2019/website/issues"
  },
  "homepage": "https://github.com/wct2019/website",
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.2.2",
    "autoprefixer": "^9.1.5",
    "chokidar-cli": "^1.2.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "postcss-focus-within": "^3.0.0",
    "rtlcss": "^2.4.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "build:style": "node-sass sass/style.scss docs/style.css --output-style expanded && postcss -r docs/style.css",
    "build": "run-p \"build:*\"",
    "start": "chokidar \"**/*.scss\" -c \"npm run build\" --initial"
  }
}
